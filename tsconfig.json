{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [ "es2017", "es2015", "dom" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts"

  ],
  "exclude": [
    "node_modules"
  ]
}
